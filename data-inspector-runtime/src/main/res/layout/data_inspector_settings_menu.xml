<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/settings_menu_background"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/menu_item_height"
      android:orientation="horizontal"
      >
    <TextView
        android:text="@string/menu_settings_log_preference_events"
        style="@style/MenuTextView"
        />
    <Switch
        android:id="@+id/log_preference_events"
        style="@style/MenuSwitch"
        />
  </LinearLayout>
  <include layout="@layout/data_inspector_menu_separator"/>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/menu_item_height"
      android:orientation="horizontal"
      >
    <TextView
        android:text="@string/menu_settings_log_storage_events"
        style="@style/MenuTextView"
        />
    <Switch
        android:id="@+id/log_storage_events"
        style="@style/MenuSwitch"
        />
  </LinearLayout>
</LinearLayout>